<head%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <%- include('../includes/nav.ejs')%>
<!--     <h1>Editing mode: <%= editing %></h1>
 -->    <main>
        <form action="<% if(editing) { %>/author/edit-post<% }else{ %>/author/add-post<% } %>" method="post" class="text-center mt-5">
            <div class="mb-3">
                <label for="title" class="pb-2">Title</label><br>
                <input style="width: 50%;" type="text" name="title" value="<% if(editing) { %><%= article.title %><% } %>" />
            </div>

            <div class="mb-3">
                <label for="title" class="pb-2">Image URL</label><br>
                <input style="width: 50%;" type="text" name="imageUrl"  value="<% if(editing) { %><%= article.imageUrl %><% } %>"/>
            </div>
            <div class="mb-3">
                <label for="title" class="pb-2">Description</label><br>
                <textarea style="width: 50%;" class="textarea" name="description" rows="5"><% if(editing) { %><%= article.description %><% } %></textarea>
            </div>

            <% if(editing) { %>
                <input type="hidden" value="<%= article._id %>" name="postId"/>
            <% } %>


            <button type="submit">
                <% if(editing) { %>
                    Edit
                <% }else{ %>
                    Add
                <% } %> 
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>