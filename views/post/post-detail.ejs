<%- include('../includes/head.ejs')%>

<body>
    <%- include('../includes/nav.ejs')%>
    <main>
        <div class="text-center">
        <h1>
            <%= article.title %>
        </h1>
        <div>
            <img src="/<%= article.imageUrl %>" alt="<%= article.title %>" width="500px">
        </div>
        <div>
            <p>
                <%= article.description %>
            </p>
        </div>
        <div class="d-flex justify-content-end p-5">
            <a href="/edit-post/<%= article._id %>?edit=true" style="margin-right:2rem ;">Edit a post</a>
         <form action="/delete-post" method="post">
             <input type="hidden" name="postId" value="<%= article._id %>"/>
             <a class="card-footer-item" href="#" onclick="this.closest('form').submit();return false;" >Delete a post</a>
         </form>
     </div>

</div>
    </main>

<%- include('../includes/end.ejs')%>
