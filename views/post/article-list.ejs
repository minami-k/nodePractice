<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <div class="container">
        <div class="row">
        <main>
        <% if(articles.length > 0) { %>
            <div class="col-sm d-flex flex-wrap justify-content-around">
            <% for(let article of articles) { %>
            <div class=" d-flex mb-5 text-center" style="width: 30%;">
                <article class="border pt-3 px-3 pb-2 mt-5 shadow-lg" style="width: max-content;">
                    <header>
                        <h1>
                            <%= article.title %>
                        </h1>
                    </header>
                    <div class="mt-3">
                        <img src="<%= article.imageUrl %>" alt="<%= article.title %>" width="100%">
                    </div>
                    <div class="p-3">
                        <%= article.description %>
                    </div>
                    <div>
                        <div>
                            <a href="/posts/<%= article._id %>" class="btn btn-secondary text-white">Read more</a>
                       </div>
                       <div class="d-flex justify-content-end">
                        <form action="/likes" method="post">
                            <input type="hidden" name="postId" value="<%= article._id %>" />
                            <a href="#" onclick="this.closest('form').submit();return false;"><i class="fas fa-thumbs-up"></i></a>
                            <p><%= article.likes_count %></p>
                        </form>  
                       
                    </div>

                    </div>
                </article>
            </div>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Articles Found</h1>
        <% } %>
    </main>
</div>
</div>

    <%- include('../includes/end.ejs') %>

